{
  "name": "wavefont",
  "version": "3.0.0",
  "description": "Typeface for visualizing waveform data",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ufo && npm run build-masterotfs & npm run build-otf && npm run build-ttf && npm run build-woff2",
    "build-ufo": "plop build-ufo wavefont100",
    "build-masterotfs": "buildmasterotfs --mkot -r,-omitMacNames -d ./build/wavefont100/wavefont.designspace",
    "build-ttf": "fontmake --no-optimize-gvar -m ./build/wavefont100/wavefont.designspace -o variable --output-path ./fonts/variable/wavefont[RADI,ALGN,wght,wdth].ttf",
    "build-otf": "npm run build-masterotfs && buildcff2vf -c -k -d ./build/wavefont100/wavefont.designspace -o ./fonts/variable/wavefont[RADI,ALGN,wght,wdth].otf",
    "subroutinize": "shx cp ./fonts/variable/wavefont.otf ./fonts/variable/wavefont.min.otf && tx -cff2 +S +b ./fonts/variable/wavefont.otf > ./table.CFF2 && sfntedit -a CFF2=./table.CFF2 ./fonts/variable/wavefont.min.otf",
    "build-woff2": "fonttools ttLib.woff2 compress ./fonts/variable/wavefont[RADI,ALGN,wght,wdth].otf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-vis/wavefont.git"
  },
  "keywords": [
    "sound",
    "audio",
    "datavis",
    "opentype",
    "waveform",
    "spectrum",
    "fft"
  ],
  "author": "Dmitry Iv <dfcreative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-vis/wavefont/issues"
  },
  "homepage": "https://github.com/a-vis/wavefont#readme",
  "devDependencies": {
    "dedent": "^0.7.0",
    "plop": "^3.1.0",
    "shx": "^0.3.3"
  }
}
